				if (get_total_selected_rad() > 0) {
					var del_conf = confirm("削除します。よろしいですか？");
					var index = new Array();
					var counter = 0;

					if (del_conf == true) {
						var deleteArr = '';
						var rad = document.getElementsByName("cb_data");
						for (var i = 0; i < rad.length; i++) {
