<%
 require 'common'

 @userEmail = params["email"]
 @message = "" if @message.blank?
 #@message   = params["message"]
 #if @message.blank?
  @message = session["message"]
  #session.delete("message")
 #end
%>
<!DOCTYPE html>
<html>
 <head>
  <%= render partial: "common/login_header" %>
  <title>くじら応募</title>
 </head>
 <body class="hold-transition login-page">
  <div class="login-box">
   <div class="login-logo">
    <a href="#"><img src="/dist/img/logo.png" class="img-responsive img-custom"></a>
   </div>
   <div class="login-box-body">
    <p class="login-box-msg">メールアドレスとパスワードを入力し「ログイン」ボタンを押してください</p>
    <p style='color:red'><strong><%=@message%></strong></p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div class="form-group has-feedback">
      <input autofocus="autofocus" type="email" value="<%=@userEmail %>" name="email" id="email" class="form-control" placeholder="ID（メール）" required oninvalid="this.setCustomValidity('emailが入力されていません。')" oninput="setCustomValidity('')">
      <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
     </div>
     <div class="form-group has-feedback">
      <input autocomplete="off" type="password"  value="" name="password" id="password" class="form-control" placeholder="パスワード" required oninvalid="this.setCustomValidity('パスワードは入力されていません。')" oninput="setCustomValidity('')">
      <span class="glyphicon glyphicon-lock form-control-feedback"></span>
     </div>
     <input type="hidden" name="from_which" value="login.jsp">
     <div class="row">
      <div class="col-xs-8">
       <label><input type="checkbox" name="RememberMe" class="flat-red"> ログインIDを記憶する</label>
      </div>
      <div class="col-md-12 col-xs-12">
       <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-rounded" %><span class="glyphicon glyphicon-user"></span>
      </div>
     </div>
    <% end %>
    <div class="social-auth-links text-center">
     <p>- または -</p>
    </div>
    <a href="/users/password/new">パスワードをお忘れの方はこちら</a><br>
   </div>
  </div>
  <script src="/dist/js/jquery.js"></script>
  <script src="/dist/js/bootstrap.js"></script>
  <script src="/dist/js/icheck.js"></script>
  <script>
   $(function () {
    $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
      checkboxClass: 'icheckbox_flat-orange',
      radioClass   : 'iradio_flat-orange'
    })
    window.sessionStorage.clear();
   })
  </script>
 </body>
</html>
